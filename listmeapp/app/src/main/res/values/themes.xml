<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ListMeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>
        <item name="colorPrimaryContainer">@color/huemint_teal_light</item>
        <item name="colorOnPrimaryContainer">@color/app_text_primary_on_surface</item>
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">#E0F2F1</item>
        <item name="colorOnSecondaryContainer">@color/primaryColor</item>
        <item name="colorError">@color/status_rejected</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:colorBackground">@color/app_background_color</item>
        <item name="colorSurface">@color/app_surface_color</item>
        <item name="colorOnSurface">@color/app_text_primary_on_surface</item>
        <item name="colorSurfaceVariant">@color/surfaceVariantColor</item>
        <item name="colorOnSurfaceVariant">@color/app_text_secondary_on_surface</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:textColor">@color/app_text_primary_on_surface</item>
        <item name="android:textColorHint">@color/app_text_secondary_on_surface</item>
        <item name="android:textColorPrimary">@color/app_text_primary_on_surface</item>
        <item name="android:textColorSecondary">@color/app_text_secondary_on_surface</item>
        <item name="colorControlNormal">@color/app_icon_color_on_surface</item>
        <item name="colorControlActivated">@color/primaryColor</item>
<!--        <item name="materialButtonStyle">@style/Widget.ListMeApp.Button.Primary</item>-->
        <item name="textInputStyle">@style/Widget.ListMeApp.TextInputLayout.Standard</item>
        <item name="editTextStyle">@style/Widget.ListMeApp.TextInputEditText.Standard</item>
        <item name="toolbarStyle">@style/Widget.ListMeApp.Toolbar.Standard</item>
        <item name="imageButtonStyle">@style/SidebarIcon</item>
    </style>

    <style name="Theme.ListMeApp.Login" parent="Theme.ListMeApp">
        <item name="android:textColorPrimary">@color/text_on_gradient_primary</item>
        <item name="android:textColorSecondary">@color/text_on_gradient_secondary</item>
        <item name="android:textColorHint">@color/text_on_gradient_secondary</item>
        <item name="colorControlNormal">@color/icon_on_gradient</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="textInputStyle">@style/Widget.ListMeApp.TextInputLayout.LoginGradient</item>
        <item name="editTextStyle">@style/Widget.ListMeApp.TextInputEditText.LoginGradient</item>
        <item name="materialButtonStyle">@style/Widget.ListMeApp.Button.LoginGradient</item>
        <item name="android:statusBarColor">@color/gradient_end_color_new</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Widget.ListMeApp.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/onPrimaryColor</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
    </style>

    <style name="Widget.ListMeApp.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
    </style>

    <style name="Widget.ListMeApp.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
    </style>

    <style name="Widget.ListMeApp.Button.LoginGradient" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/login_button_background</item>
        <item name="android:textColor">@color/login_button_text</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.ListMeApp.TextInputLayout.Standard" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/field_stroke_light_theme</item>
        <item name="hintTextColor">@color/field_hint_light_theme</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.SmallComponent</item>
    </style>

    <style name="Widget.ListMeApp.TextInputEditText.Standard" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/app_text_primary_on_surface</item>
        <item name="android:textColorHint">@color/app_text_secondary_on_surface</item>
    </style>

    <style name="Widget.ListMeApp.TextInputLayout.LoginGradient" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/login_field_background</item>
        <item name="hintTextColor">@color/text_on_gradient_secondary</item>
        <item name="android:textColorHint">@color/text_on_gradient_secondary</item>
        <item name="startIconTint">@color/icon_on_gradient</item>
        <item name="endIconTint">@color/icon_on_gradient</item>
        <item name="passwordToggleTint">@color/icon_on_gradient</item>
        <item name="counterTextColor">@color/text_on_gradient_secondary</item>
        <item name="helperTextTextColor">@color/text_on_gradient_secondary</item>
        <item name="errorIconTint">@color/white</item>
        <item name="errorTextColor">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.MediumComponent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="Widget.ListMeApp.TextInputEditText.LoginGradient" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/text_on_gradient_primary</item>
    </style>

    <style name="Widget.ListMeApp.Toolbar.Standard" parent="Widget.Material3.Toolbar.Surface">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="SidebarIcon" parent="Widget.Material3.Button.IconButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="iconTint">@color/onPrimaryColor</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="DetailLabel" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/app_text_secondary_on_surface</item>
    </style>
    <style name="DetailValue" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textColor">@color/app_text_primary_on_surface</item>
    </style>
    <style name="DetailValueSmall" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textColor">@color/app_text_secondary_on_surface</item>
    </style>

    <style name="Widget.ListMeApp.Button.DialogCancel" parent="Widget.Material3.Button">
        <item name="android:textColor">?attr/colorPrimary</item>

        <item name="backgroundTint">@android:color/transparent</item>

        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>

        <item name="elevation">0dp</item>
    </style>
</resources>