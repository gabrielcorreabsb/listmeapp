<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ListMeApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Cores Primárias -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item> <!-- Usado pela status bar por padrão -->
        <item name="colorOnPrimary">@color/onPrimaryColor</item>

        <!-- Cores Secundárias (se você usar) -->
        <!-- <item name="colorSecondary">@color/teal_200</item> -->
        <!-- <item name="colorSecondaryVariant">@color/teal_700</item> -->
        <!-- <item name="colorOnSecondary">@color/black</item> -->

        <!-- Cor da Status Bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Cor de fundo padrão das janelas -->
        <item name="android:windowBackground">@color/backgroundColor</item>

        <!-- Estilo para TextInputEditText (para hints e cores) -->
        <item name="textInputStyle">@style/Widget.ListMeApp.TextInputLayout</item>
        <item name="editTextStyle">@style/Widget.ListMeApp.TextInputEditText</item>

        <!-- Estilo para Botões -->
        <item name="materialButtonStyle">@style/Widget.ListMeApp.Button</item>
    </style>

    <!-- Estilos para componentes específicos -->
    <style name="Widget.ListMeApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="hintTextColor">@color/primaryColor</item>
    </style>

    <style name="Widget.ListMeApp.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
    </style>

    <style name="Widget.ListMeApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/onPrimaryColor</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>